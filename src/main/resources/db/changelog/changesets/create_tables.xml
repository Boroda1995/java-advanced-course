<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="1.create_table_product" author="alexander_haldovich">
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2.create_table_customer" author="alexander_haldovich">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.create_table_customer" author="alexander_haldovich">
        <addColumn tableName="product">
            <column name="customer_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="customer_id"
                                 referencedTableName="customer"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_customer"/>
    </changeSet>

    <changeSet id="4.create_table_app_user" author="alexander_haldovich">
        <createTable tableName="app_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
